<div class="col-12 row">
    <div class="col-8">
        <div class="container">
            <div class="row">
                <div class="card">
                    <div class="card-header bg-dark text-white">
                        <h2>Add A New Post</h2>
                    </div>
                    <div class="card-body">
                        <label for="title">Title</label>
                        <input type="text" id="postTitle">
                        <label for="text">Post Text</label>
                        <input type="textarea" id="postText">
                        <button class="btn btn-dark my-2" id="createPost">Create Post</button>
                    </div>
                </div>

            </div>
            <div class="row">
                {{#if user.posts}}
                {{#each user.posts}}
                <div class="card text-center m-3 p-0">
                    <div class="card-header bg-dark text-white mb-1">
                        <a href="user/post/{{ id }}">
                            <h3> {{title}}</h3>
                        </a>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            {{ post_text }}
                        </p>
                        <p class="card-text">
                            {{format_date createdAt}}
                        </p>
                    </div>
                    {{/each}}
                    {{else}}
                    <h1>You dont have any posts to show</h1>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="card">
            <div class="card-header bg-dark text-white text-center">
                <h1>{{user.name}}</h1>
            </div>
            <div class="card-body">
                <div class="card-text">
                    <p>Email: {{user.email}}</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/post.js"></script>